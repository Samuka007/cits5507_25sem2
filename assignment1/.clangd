CompileFlags:
  # Apply to all C source files in this project
  Add:
    - -x
    - c
    # - -std=c11
    # - -O2
    - -Wall
    - -Wextra
    - -pedantic
    - -fopenmp
    - -I./include
    - -D_ISOC11_SOURCE

# Optional: enable background indexing for better cross-references
Index:
  Background: Build

